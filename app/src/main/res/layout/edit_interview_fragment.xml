<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_arrow_back">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewToolbarTitle"
            style="@style/Text.ToolbarTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/screen_title_edit_interview" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:paddingStart="@dimen/_20dp"
        android:paddingEnd="@dimen/_20dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/labelCandidateName"
                style="@style/Text.LabelForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_candidate_name" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/candidateName"
                style="@style/EditText.SingleLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:imeOptions="actionNext"
                android:inputType="textPersonName" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/labelExperience"
                style="@style/Text.LabelForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:text="@string/label_experience_years" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/experience"
                style="@style/EditText.SingleLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/labelInterviewDate"
                style="@style/Text.LabelForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:text="@string/label_interview_date" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/interviewDate"
                style="@style/EditText.NonClickable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:drawableEnd="@drawable/ic_arrow_down" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/labelHrManager"
                style="@style/Text.LabelForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:text="@string/label_hr_manager" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/hrManager"
                style="@style/EditText.NonClickable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:drawableEnd="@drawable/ic_arrow_down" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/labelInterviewer"
                style="@style/Text.LabelForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:text="@string/label_interviewer" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/interviewer"
                style="@style/EditText.NonClickable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:drawableEnd="@drawable/ic_arrow_down" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/labelInterviewComments"
                style="@style/Text.LabelForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:text="@string/label_interview_comments" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/interviewComments"
                style="@style/EditText.MultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/labelPracticalComments"
                style="@style/Text.LabelForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:text="@string/label_practical_comments" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/practicalComments"
                style="@style/EditText.MultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/labelPracticalLink"
                style="@style/Text.LabelForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:text="@string/label_practical_link" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/practicalLink"
                style="@style/EditText.SingleLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:imeOptions="actionDone"
                android:inputType="text" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonAdd"
                style="@style/Button.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginBottom="@dimen/_20dp"
                android:text="@string/button_update" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>