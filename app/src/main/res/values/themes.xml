<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidTemplateWithHilt" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorPrimary">@color/primary</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@null</item>
    </style>

    <!--region TextView-->
    <style name="Text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Text.Primary">
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="Text.Primary.Regular">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Text.Primary.Medium">
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="Text.Primary.SemiBold">
        <item name="fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="Text.Primary.Bold">
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="Text.Secondary">
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="Text.Secondary.Regular">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="Text.InterviewResult" parent="Text.Primary.Regular">
        <item name="android:background">@drawable/bg_text_interview_result</item>
        <item name="android:paddingStart">@dimen/_4dp</item>
        <item name="android:paddingEnd">@dimen/_4dp</item>
        <item name="android:paddingTop">@dimen/_2dp</item>
        <item name="android:paddingBottom">@dimen/_2dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_10sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Text.ToolbarTitle" parent="Text.Primary.Medium">
        <item name="android:textSize">@dimen/_20sp</item>
    </style>

    <style name="Text.SettingsItem" parent="Text.Primary.Medium">
        <item name="android:layout_marginStart">@dimen/_20dp</item>
        <item name="android:layout_marginEnd">@dimen/_20dp</item>
        <item name="android:layout_marginBottom">@dimen/_20dp</item>
        <item name="android:background">@drawable/bg_card_setting</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right</item>
        <item name="android:paddingStart">@dimen/_20dp</item>
        <item name="android:paddingEnd">@dimen/_20dp</item>
        <item name="android:paddingTop">@dimen/_15dp</item>
        <item name="android:paddingBottom">@dimen/_15dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Text.LabelForm" parent="Text.Secondary.Regular">
        <item name="android:textSize">@dimen/_14sp</item>
    </style>

    <!--endregion TextView-->

    <!--region Button-->

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Primary">
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">@dimen/_28dp</item>
        <item name="android:paddingEnd">@dimen/_28dp</item>
        <item name="android:paddingTop">@dimen/_12dp</item>
        <item name="android:paddingBottom">@dimen/_12dp</item>
    </style>

    <!--endregion Button-->

    <!--region Toolbar-->

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <!--endregion Toolbar-->

    <!--region EditText-->

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:paddingStart">@dimen/_20dp</item>
        <item name="android:paddingEnd">@dimen/_20dp</item>
        <item name="android:paddingTop">@dimen/_12dp</item>
        <item name="android:paddingBottom">@dimen/_12dp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:gravity">start|top</item>
        <!--To set cursor color as text color-->
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="EditText.SingleLine">
        <item name="android:singleLine">true</item>
        <item name="singleLine">true</item>
        <item name="maxLines">1</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="EditText.NonClickable">
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:inputType">none</item>
    </style>

    <style name="EditText.MultiLine">
        <item name="android:singleLine">false</item>
        <item name="singleLine">false</item>
        <item name="android:minLines">5</item>
        <item name="android:inputType">textMultiLine</item>
    </style>
    <!--endregion EditText-->

    <!--region DatePickerDialog-->

    <style name="DatePickerSpinner">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/primary</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <style name="DatePickerDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/DatePickerDialogTitle</item>
        <item name="buttonBarPositiveButtonStyle">@style/DatePickerDialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/DatePickerDialogButton</item>
    </style>

    <style name="DatePickerDialogTitle" parent="Text.Primary.SemiBold">
        <item name="android:textSize">@dimen/_20dp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="DatePickerDialogButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textSize">@dimen/_14dp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <!--endregion DatePickerDialog-->
</resources>